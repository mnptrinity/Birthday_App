<form method="post" action="/findbirthday" style="margin-top: 30px;">
  <div class="form-group" >
    <label for="exampleInputPassword1">DOB</label>
    <input type="date" name="dob" class="form-control" id="exampleInputPassword1" required>
  </div>

  <button type="submit" class="btn btn-primary">Find</button>


{{#if result.length}}
<ul class="list-group" style="margin-top:40px;">
  <li class="list-group-item list-group-item-success active">User's having Birthday : {{result.length}} </li>
  {{#each result}}
      {{#if email}}
  <li class="list-group-item">{{email}}</li>
      {{/if}}
  {{/each}}
</ul>
{{/if}}
{{#if noresults}}
<ul class="list-group" style="margin-top:40px;">
  <li class="list-group-item list-group-item-danger">{{noresults}}</li>
</ul>
{{/if}}


